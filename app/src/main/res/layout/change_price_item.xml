<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/chp_barcode"
            android:text="00000000000000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/chp_item_articl"
            android:text="Цена:"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/app_orange_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/sc_item_name"
        android:text="Название"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">
        <TextView
            android:id="@+id/sc_item_articul"
            android:text="Старая"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/app_green"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/sc_item_summa"
            android:text="Новая"
            android:gravity="right"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/app_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>